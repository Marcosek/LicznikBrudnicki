<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            x:Name="MainLayout">


            <Label
                Text="Witaj i poklikaj!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Licznik 1"
                FontSize="18"
                HorizontalOptions="Center"
      />
            <Label
                x:Name="Licznik"
                Text="0"
                FontSize="18"
                HorizontalOptions="Center"
  />

            <Button
                x:Name="PlusPrzycisk"
                Text="+"             
                Clicked="PlusKlikniety"
                HorizontalOptions="Fill"
                 />
            <Button
                x:Name="MinusPrzycisk"
                Text="-"             
                Clicked="MinusKlikniety"
                HorizontalOptions="Fill"
                 />
            <Button 
                x:Name="DodajLicznikPrzycisk"
                Text="Dodaj licznik" 
                Clicked="DodajLicznikKlikniety"
                HorizontalOptions="Fill"/>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
